                            <comment id="17018900" author="alexherbert" created="Sun, 19 Jan 2020 12:38:22 +0000"  >&lt;p&gt;This throws a NotSerializableException.&lt;/p&gt;

&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;
@Test
&lt;span class=&quot;code-keyword&quot;&gt;public&lt;/span&gt; void testSerialization() &lt;span class=&quot;code-keyword&quot;&gt;throws&lt;/span&gt; IOException {
    CSVRecord shortRec;
    &lt;span class=&quot;code-keyword&quot;&gt;try&lt;/span&gt; (&lt;span class=&quot;code-keyword&quot;&gt;final&lt;/span&gt; CSVParser parser = CSVParser.parse(&lt;span class=&quot;code-quote&quot;&gt;&quot;a,b&quot;&lt;/span&gt;, CSVFormat.newFormat(&lt;span class=&quot;code-quote&quot;&gt;&apos;,&apos;&lt;/span&gt;))) {
        shortRec = parser.iterator().next();
    }
    &lt;span class=&quot;code-keyword&quot;&gt;final&lt;/span&gt; ByteArrayOutputStream out = &lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; ByteArrayOutputStream();
    &lt;span class=&quot;code-keyword&quot;&gt;try&lt;/span&gt; (ObjectOutputStream oos = &lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; ObjectOutputStream(out)) {
        oos.writeObject(shortRec);
    }
}
&lt;/pre&gt;
&lt;/div&gt;&lt;/div&gt;</comment>
